<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="minimum-scale=1, initial-scale=1, width=device-width" />
    <title>{{ metadata.title }}</title>
    <meta name="description" content="{{ metadata.description }}">
    <!-- <link rel="stylesheet" href="./styles/custom.css"> -->
    <link rel="stylesheet" href="/style.css?v={% version %}"/>

</head>

<body class="container mx-auto px-8 pt-16">

    <nav class="pb-8">
        {% set navPages = collections.all | eleventyNavigation %}
        <ul class="flex">
            {%- for entry in navPages %}
            <li {% if entry.url==page.url %} class="flex-1 mr-2 mr-6 uppercase underline" {% endif %} class="flex-1 mr-2 mr-6">
                <a href="{{ entry.url | url }}" class="text-blue-500 hover:text-blue-800">{{ entry.title }}</a>
            </li>
            {%- endfor %}
        </ul>
    </nav>
    <main>
        <article>
            <h1 class="font-bold pb-8">{{ title }}</h1>
            <p class="leading-8">
                {{ content | safe }}
            </p>
        </article>
        
    </main>
   
    <footer class="pt-8 mt-8 border-t-2 border-black">
        <p>All content BY-NC-CC {{ metadata.title }}</p>
    </footer>
</body>

</html>