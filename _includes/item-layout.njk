---
layout: layout
---

<article>
  <img src="/assets/{{ image }}" alt="{{ description }}" class="img" width="500"/>

  {{ content | safe }}

</article>


<h2>Tagged:</h2>

<ul>
  {% for tag in tags %}
    {% if tag == "item" %}
    {% else %}
      <li> {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="item-tag">{{ tag }}</a>
      </li>
    {% endif %}
  {% endfor %}
  
</ul>

<!-- create nextPost/previousPost, see if there is one, then see if it matches the parent category -->

<h2>Pagination:</h2>
<ul>
    {% set nextPost = collections.item | getNextCollectionItem(page) %}

    {% if nextPost %}
    {% if nextPost.data.parent == parent %}
    <li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
    {% endif %}


    {% set previousPost = collections.item | getPreviousCollectionItem(page) %}
    
    {% if previousPost %}
    {% if previousPost.data.parent == parent %}
    <li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>
    {% endif %}
    {% endif %}
</ul>

<a href="../{{ item.parent | url }}">&larr; Back</a>