<ol reversed class="itemlist" style="counter-reset: start-from {{ (itemslistCounter or itemslist.length) + 1 }}">

{% for item in itemslist | reverse %}

  <li class="itemlist-item{% if item.url == url %} itemlist-item-active{% endif %}">

    <a href="{{ item.url | url }}" class="itemlist-link">{% if item.data.title %}{{ item.data.title }}{% else %}<code>{{ item.url }}</code>{% endif %}</a>

    <time class="itemlist-date" datetime="{{ item.date | dateIso }}">{{ item.date | dateReadable }}</time>

    {% for tag in item.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="item-tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}

  </li>
  
{% endfor %}

</ol>